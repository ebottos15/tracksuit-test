{
  "name": "@suittracker/server",
  "$schema": "https://raw.githubusercontent.com/denoland/deno/refs/heads/v2.1/cli/schemas/config-file.v1.json",
  "exports": {},
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-write --allow-ffi --allow-env --env-file=../.env --watch app.ts",
    "test": "deno test -A --env-file=../.env --no-check=remote"
  },
  "imports": {
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@oak/oak": "jsr:@oak/oak@^17.1.3",
    "@std/assert": "jsr:@std/assert@^1.0.14",
    "@std/expect": "jsr:@std/expect@^1.0.8",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/testing": "jsr:@std/testing@^1.0.5",
    "zod": "npm:zod@^3.23.8",
    "$models/": "./models/",
    "$tables/": "./tables/"
  }
}
